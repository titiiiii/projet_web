<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Api Requests recuperation</title>
  </head>

  <body>
    <h1>May Node and Express be with me.</h1>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>

    <div>
        <h2>Modification des requêtes</h2>
        <p>
          Remplacer la première requête par une requête différente
        </p>
        <button id="update-button">Remplacer</button>
      </div>

      

    <h2> Quotes </h2>

<ul class="quotes">
  <!-- Loop through quotes -->
  <% for(var i = 0; i < quotes.length; i++) {%>
    <li class="quote">
      <!-- Output name from the iterated quote object -->
      <span><%= quotes[i].name %></span>:
      <!-- Output quote from the iterated quote object -->
      <span><%= quotes[i].quote %></span>
    </li>
  <% } %>
</ul>

<script src="/public/main.js"></script>
  </body>
</html>